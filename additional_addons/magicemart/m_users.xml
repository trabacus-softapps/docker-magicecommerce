<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
<!--	
         ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^
       				Inherited: Users  
  		^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^	
-->
       
     <record id="view_form_res_users" model="ir.ui.view">
            <field name="name">view_form_res_users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//field[@name='active']" position="after">
                	    <field name="location_id" 
                	        attrs="{'invisible' : [('user_roles', 'in', ('magicemart_group_user','magicemart_group_manager','magicemart_supplier_portal','magicemart_portal_user'))]}"/>
                	</xpath>
                    
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="user_roles"/>
                    </xpath>
                    <xpath expr="//field[@name='user_roles']" position="after">
                        <field name="partner_id" string="Customer/Supplier" required="0" domain="[('is_company','=',True)]"
                            attrs="{'invisible' : [('user_roles', 'in', ('magicemart_group_user','magicemart_group_manager'))]}"/>
                    </xpath>
                    
                </data>
            </field>
        </record>
        
    </data>
</openerp>