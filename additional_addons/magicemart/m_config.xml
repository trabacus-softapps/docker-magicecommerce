        <record id="product_order_tree_view" model="ir.ui.view">
            <field name ="name">product_order_tree_view</field>
            <field name ="model">order.product.wiz</field>
            <field name ="arch" type ="xml">
                <form string="Order Product" version="7.0">
                    <separator string="Order Products"/>
                    <group>
                        <field name="product_ids">
                            <tree editable = "top">
                                <field name="image" widget="image" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="prod_qty" required = "1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="create_orders" string="Create" type="object"
                            class="oe_highlight"/>
                        <button string="Cancel" special="cancel" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
